<% if @url.valid_url.eql? true %>
$('#show_url').html("<%= j (render 'form') %>");
$('#show_url').slideDown(350);
$('#url_url').val("<%= request.base_url + "/" + @url.slug %>");
$("#clear_url").show();
$("#copy_url").show();
$("#create_url").css("display", "none");
<% else %>
$("#show_url").html("<%= escape_javascript flash[:notice]%>");
$("#show_url").delay(3200).fadeOut(300);
<% end %>