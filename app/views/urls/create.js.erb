<% unless params[:url][:url].blank?%>
$('#show_url').html("<%= j (render 'form') %>");
$('#show_url').slideDown(350);
$('#url_url').val("<%= request.base_url + "/" + @url.slug %>");
$("#clear_url").show();
$("#copy_url").show();
$("#create_url").hide();
<% else %>
$(".container").html("<%= escape_javascript(render :partial => 'layouts/partial/flash_message' , :locals => { flash: flash }).html_safe %>");
<% end %>